<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HospedagemOnline.MainPage"
             BackgroundColor="#F8F9FA"
             Title="Hospedagem Online">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="25" VerticalOptions="Center">

            
            <Image Source="hotel_icon.png" WidthRequest="100" HeightRequest="100" HorizontalOptions="Center" />

            
            <Label Text="Hospedagem Online"
                   FontSize="30"
                   FontAttributes="Bold"
                   FontFamily="Arial"
                   HorizontalOptions="Center"
                   TextColor="#333" />

            
            <Label Text="Encontre e reserve seu hotel ideal com facilidade!"
                   FontSize="16"
                   HorizontalOptions="Center"
                   TextColor="#666"
                   FontFamily="Arial" />

            
            <Button Text="Reservar Hotel"
                    FontSize="18"
                    FontFamily="Arial"
                    BackgroundColor="#007BFF"
                    TextColor="White"
                    CornerRadius="15"
                    HeightRequest="50" />

            <Button Text="Minhas Reservas"
                    FontSize="18"
                    FontFamily="Arial"
                    BackgroundColor="#28A745"
                    TextColor="White"
                    CornerRadius="15"
                    HeightRequest="50" />

            <Button Text="Sobre o App"
                    FontSize="18"
                    FontFamily="Arial"
                    BackgroundColor="#343A40"
                    TextColor="White"
                    CornerRadius="15"
                    HeightRequest="50"
                    Clicked="OnSobreAppClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
